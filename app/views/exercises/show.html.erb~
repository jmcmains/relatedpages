<%= button_to("Next >", exercise_path(@exercise.next_exercise), method: :get, class: "btn btn-primary") if !@exercise.next_exercise.nil? %>
</div>
</div>
<p id="notice"><%= notice %></p>
<h1 style="text-align:center"><%= @exercise.name %></h1>
<div style="width:auto;display:block;margin-left:auto;margin-right:auto;">
  <h3>Related Products:</h3>
    <% Product.all.sort_by(&:name).each do |product| %>
      <div id="product_form_<%= product.id %>" style="display:inline">
          <% if product.related?(@exercisse) %>
            <%= render 'unfollow', product: product, exercise: @exercise %>
          <% else %>
            <%= render 'follow', product: product, exercise: @exercise %>
          <% end %>
    </div>
<% end %>
</div>

