<h1>Listing products</h1>
<p><%= link_to "Export Related Products", related_products_csv_products_path %> | <%= link_to "Export Related Exercises", related_exercises_csv_products_path %></p>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.sort_by(&:name).each do |product| %>
      <tr>
        <td id="name_<%= product.id %>"><%= link_to product.name, edit_name_product_path(product), remote: true %></td>
        <td><%= product.sku %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

