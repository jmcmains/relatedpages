<%= form_for(follower.relationships.build(followed_id: followed.id), remote: true, html: {class: "form-inline", style: "display:inline"}) do |f| %>
  <%= f.hidden_field :followed_id %>
    <%= f.hidden_field :follower_id %>
  <%= f.submit "+ #{follower.name}", class: "btn btn-default", style: "display:inline;width:100px;vertical-align: middle;float: left;height: 50px;width: 113px;overflow: hidden;margin: 5px;text-overflow: ellipsis;white-space: normal;" %>
<% end %>
