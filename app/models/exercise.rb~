class Exercise < ActiveRecord::Base
  has_many :related_products, foreign_key: "exercise_id", dependent: :destroy
  has_many :products, through: :related_products, source: :product
  
  def related?(product)
    related_products.find_by(product_id: product.id)
  end

  def relate!(product)
    related_products.create!(product_id: product.id)
  end
  
  def unrelate!(product)
    related_products.find_by(product_id: user.id).destroy
  end
end
